.foods_wrapper

  .foods_main
    .foods_main__top
      1日のカロリー計算
    %ul.foods_main__nutrition
      - @nutrition.each do |nutrition|
        %li.foods_main__nutrition__block
          .ja
            = nutrition[:ja]
          .eng
            = nutrition[:eng]
    - @meals.each do |meal|
      .foods_main_content
        .foods_main__meal
          = meal[:name]
        %ul{class:"foods_main__foods", id:"foods#{meal[:id]}"}
        .foods_main__total
          .foods_main__total__add
            = link_to "#",class:"add", id:"#{meal[:id]}" do
              フード追加
          %ul.foods_main__total__data{id:"meal#{meal[:id]}"}
            - @nutrition.each do |nutrition|
              %li.foods_main__total__data--num{class:"data_#{nutrition[:column]}"}
    .foods_main__all
      .foods_main__all__text
        合計
      %ul.foods_main__all__data
        -@nutrition.each do |nutrition|
          %li.foods_main__all__data--num{id:"total_#{nutrition[:column]}"}
            0
    %ul.foods_main__nutrition
      - @nutrition.each do |nutrition|
        %li.foods_main__nutrition__block
          .ja
            = nutrition[:ja]
          .eng
            = nutrition[:eng]
    .foods_main__output
      %input.foods_main__output__csv{type:"submit", id:"csv", value:"データ出力"}
      %a#downloader{href: "#", style: "display:none;"}

= render "layouts/modal"
